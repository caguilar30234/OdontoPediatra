@model FrontEnd.Models.ClinicViewModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_LayoutAccounts.cshtml";
}

<h1>Details</h1>

<div>
    <h4>ClinicViewModel</h4>
    <hr />
    <dl class="row">
        @Html.HiddenFor(Model => Model.ClinicId)
        @Html.HiddenFor(Model => Model.DoctorId)
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ClinicName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ClinicName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ClinicPhone)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ClinicPhone)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ClinicAddress)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ClinicAddress)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ProvinceId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Province.ProvinceName)
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new { id = Model.ClinicId }) |
    <a asp-controller="Home" asp-action="Paciente" class="btn btn-primary">Regresar</a>
</div>
