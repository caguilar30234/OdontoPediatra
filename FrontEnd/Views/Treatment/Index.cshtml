@model IEnumerable<FrontEnd.Models.TreatmentViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAccounts.cshtml";
}

<h1>Listado de tratamientos</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Crear nuevo tratamiento</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TreatmentId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BaseCost)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TreatmentId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BaseCost)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id=item.TreatmentId }, new{@class="btn btn-success"}) |
                    @Html.ActionLink("Detalles", "Details", new { id=item.TreatmentId }, new{@class="btn btn-primary"}) |
                    @Html.ActionLink("Eliminar", "Delete", new { id=item.TreatmentId }, new{@class="btn btn-danger"})
            </td>
        </tr>
}
    </tbody>
</table>
<a asp-controller="Home" asp-action="Paciente" class="btn btn-primary">Regresar</a>