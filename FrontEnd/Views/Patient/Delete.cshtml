@model FrontEnd.Models.PatientViewModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_LayoutAccounts.cshtml";
}

<h1>Eliminar</h1>

<h3>Esta seguro de eliminar este paciente?</h3>
<div>
    <hr />
    <dl class="row">
        @Html.HiddenFor(Model => Model.PatientId)
        @Html.HiddenFor(Model => Model.EducationId)
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Identification)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Identification)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.LastName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Age)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Age)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Education.Level)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Education.Level)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        @Html.HiddenFor(Model => Model.PatientId)
        <input type="submit" value="Eliminar Paciente" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-primary">Regresar</a>
    </form>
</div>
