@model FrontEnd.Models.AdviceViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Consejo del día</h4>
    <hr />
    <dl class="row">
        @Html.HiddenFor(Model=>Model.AdviceId)
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Picture)
        </dt>
        <dd class = "col-sm-10">
            @{
                if (Model.Picture != null)
                {
                    string imageBase64 = Convert.ToBase64String(Model.Picture);
                    string imageSrc = string.Format("data:ContentType = image/jpg;base64,{0}", imageBase64);
                    <img src="@imageSrc" width="400" height="400" />
                }
            }
        </dd>
    </dl>
</div>
<div class="row">
    <br/>
    <div class="col-md-1">
        @Html.ActionLink("Edit", "Edit", new { id = Model.AdviceId }, new { @class="btn btn-primary py-2 px-4 ms-3"})
    </div>
    <div class="col-md-1"></div>
    <div class="col-md-2">
        <a asp-controller="Home" asp-action="Paciente" class="btn btn-primary">Regresar</a>
    </div>
</div>
