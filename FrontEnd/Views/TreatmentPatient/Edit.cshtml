@model FrontEnd.Models.TreatmentPatientViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_LayoutAccounts.cshtml";
}

<h1>Edit</h1>

<h4>TreatmentPatientViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TreatmentPatientId" class="control-label"></label>
                <input asp-for="TreatmentPatientId" class="form-control" readonly/>
                <span asp-validation-for="TreatmentPatientId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PatientId" class="control-label"></label>
                @Html.DropDownListFor(model => model.PatientId, new SelectList(Model.Patients, "PatientId", "Name"), "--Select--")
                <span asp-validation-for="PatientId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TreatmentId" class="control-label"></label>
                @Html.DropDownListFor(model => model.TreatmentId, new SelectList(Model.Treatments, "TreatmentId", "Name"), "--Select--")
                <span asp-validation-for="TreatmentId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Home" asp-action="Paciente" class="btn btn-primary">Regresar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
